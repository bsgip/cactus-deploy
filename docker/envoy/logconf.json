{
    "version": 1,
    "disable_existing_loggers": false,
    "filters": {
        "exclude_health_checks": {
            "()": "envoy.logfilters.ExcludeMessageFilter",
            "exclude_str": "/status/version"
        }
    },
    "formatters": {
        "jsonl": {
            "class": "pythonjsonlogger.jsonlogger.JsonFormatter",
            "format": "%(asctime)s %(levelname)s %(name)s %(message)s",
            "json_ensure_ascii": false
        },
        "standard": {
            "format": "%(asctime)s - %(levelname)s - %(name)s - %(message)s"
        }
    },
    "handlers": {
        "stdout": {
            "class": "logging.StreamHandler",
            "formatter": "standard",
            "stream": "ext://sys.stdout"
        },
        "stderr": {
            "class": "logging.StreamHandler",
            "formatter": "standard",
            "stream": "ext://sys.stderr"
        },
        "uvicornfile": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "jsonl",
            "filename": "/shared/uvicorn.jsonl",
            "maxBytes": 10485760,
            "backupCount": 5,
            "encoding": "utf-8"
        },
        "serverfile": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "jsonl",
            "filename": "/shared/envoy.server.jsonl",
            "maxBytes": 10485760,
            "backupCount": 5,
            "encoding": "utf-8"
        },
        "adminfile": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "jsonl",
            "filename": "/shared/envoy.admin.jsonl",
            "maxBytes": 10485760,
            "backupCount": 5,
            "encoding": "utf-8"
        },
        "notificationfile": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "jsonl",
            "filename": "/shared/envoy.notification.jsonl",
            "maxBytes": 10485760,
            "backupCount": 5,
            "encoding": "utf-8"
        }
    },
    "loggers": {
        "uvicorn": {
            "level": "INFO",
            "handlers": [
                "stdout",
                "uvicornfile"
            ],
            "propagate": false
        },
        "uvicorn.error": {
            "level": "ERROR",
            "handlers": [
                "stderr",
                "uvicornfile"
            ],
            "propagate": false
        },
        "uvicorn.access": {
            "level": "INFO",
            "filters": [
                "exclude_health_checks"
            ],
            "handlers": [
                "stdout",
                "uvicornfile"
            ],
            "propagate": false
        },
        "envoy.server": {
            "level": "INFO",
            "filters": [
                "exclude_health_checks"
            ],
            "handlers": [
                "stdout",
                "serverfile"
            ],
            "propagate": false
        },
        "envoy.admin": {
            "level": "INFO",
            "filters": [
                "exclude_health_checks"
            ],
            "handlers": [
                "stdout",
                "adminfile"
            ],
            "propagate": false
        },
        "envoy.notification": {
            "level": "INFO",
            "filters": [
                "exclude_health_checks"
            ],
            "handlers": [
                "stdout",
                "notificationfile"
            ],
            "propagate": false
        }
    }
}